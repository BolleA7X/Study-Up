<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/registrationButton"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newPass"
        android:layout_alignStart="@+id/newPass"
        android:layout_below="@+id/newPass"
        android:background="@android:color/transparent"
        android:text="Registrati" />

    <EditText
        android:id="@+id/newLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:hint="@string/login_textview_label"
        android:inputType="text" />

    <EditText
        android:id="@+id/newPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/newLog"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:ems="10"
        android:hint="@string/password_textview_label"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/registrationButton"
        android:layout_alignBottom="@+id/registrationButton"
        android:layout_toEndOf="@+id/registrationButton"
        android:layout_toRightOf="@+id/registrationButton"
        android:background="@android:color/transparent"
        android:text="Accedi" />


</RelativeLayout>